{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "buildOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "database**/*.ts",
    "backend/**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "cypress/**/*.spec.ts",
    "dist",
    "build",
    "coverage",
    "public",
    "next.config.js",
    "next-env.d.ts",
    "tsconfig.json",
    "tsconfig.build.json",
  ]
}
